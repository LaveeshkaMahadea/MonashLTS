@model IEnumerable<MonashLTS.Models.Case>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CaseManager.FullNameCM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.Alias)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeachingAssistant.FullNameTA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit.UnitCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CaseId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CaseManager.FullNameCM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.Alias);
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeachingAssistant.FullNameTA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unit.UnitCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CaseId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
